{
  "name": "raylib-js",
  "version": "1.0.0",
  "description": "TypeScript wrapper for Raylib with Bun FFI and Rust-style error handling",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "raylib-js": "./scripts/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src/wrappers",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "raylib",
    "game-development",
    "graphics",
    "typescript",
    "bun",
    "ffi",
    "rust-style",
    "result-type"
  ],
  "author": "Lisovskii Ivan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LisovskiyIvan/raylib-js.git"
  },
  "bugs": {
    "url": "https://github.com/LisovskiyIvan/raylib-js/issues"
  },
  "homepage": "https://github.com/LisovskiyIvan/raylib-js#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun scripts/dev/build.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run test && bun run build",
    "compile": "bun scripts/compile-all.js",
    "compile:textures": "bun scripts/compile-textures.js",
    "compile:render-texture": "bun scripts/compile-render-texture.js",
    "test": "bun test tests/",
    "test:watch": "bun test tests/ --watch",
    "examples": "bun examples/run-all.ts",
    "example:basic": "bun examples/01-basic-window.ts",
    "example:shapes": "bun examples/02-shapes-and-text.ts",
    "example:input": "bun examples/03-input-handling.ts",
    "example:collision": "bun examples/04-collision-detection.ts",
    "example:texture": "bun examples/05-texture-loading.ts",
    "example:render": "bun examples/06-render-texture.ts",
    "example:demo": "bun examples/07-complete-demo.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/bun": "latest",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  }
}
